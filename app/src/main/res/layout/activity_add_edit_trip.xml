    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the start date and time"
        android:id="@+id/textViewAddEditTripsdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <DatePicker
        android:layout_width="170dp"
        android:layout_height="400dp"
        android:id="@+id/DatePickerAddEditTripsdate"
      />

    <TimePicker
        android:layout_width="185dp"
        android:layout_height="400dp"
        android:id="@+id/TimePickerAddEditTripstime"
        />

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the end date and time"
        android:id="@+id/textViewAddEditTripedate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <DatePicker
            android:layout_width="170dp"
            android:layout_height="400dp"
            android:id="@+id/DatePickerAddEditTripedate"
            />

        <TimePicker
            android:layout_width="185dp"
            android:layout_height="400dp"
            android:id="@+id/TimePickerAddEditTripetime"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTES"
        android:id="@+id/textViewAddEditTripnotes"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddEditTripnotes"
        android:layout_gravity="right"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/buttonAddEditTripdone"
        android:layout_gravity="center_horizontal" />

