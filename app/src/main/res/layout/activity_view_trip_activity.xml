<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@mipmap/trip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fafafb" />
    <!-- picture to be changed-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="New Text"
        android:id="@+id/textViewVTATitle"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#e8ebf9"
        android:layout_toRightOf="@id/imageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/textViewVTAPlace"
        android:ellipsize="marquee"
        android:layout_below="@+id/textViewVTATitle"
        android:background="#7ea9f9"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/textViewVTADuration"
        android:layout_below="@+id/textViewVTAPlace"
        android:background="#7ea9f9"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="20sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewTLAEventList"
        android:layout_below="@+id/textViewVTADuration"
        android:layout_centerHorizontal="true"
        android:background="#e0e4f8" />

</RelativeLayout>
</ScrollView>