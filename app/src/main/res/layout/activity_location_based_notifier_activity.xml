<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white_fabric_texture">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Say hello to family/friends"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff00ddff"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:elevation="@dimen/abc_edit_text_inset_horizontal_material"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location Update set for your trip!! You will be reminded to &quot;say hello&quot; when you reach..."
        android:id="@+id/textView10"
        android:layout_marginTop="50dp"
        android:textColor="#FF342A5E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:elevation="@dimen/abc_edit_text_inset_bottom_material"
        android:background="@android:color/background_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLBNAplace"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:elevation="@dimen/abc_edit_text_inset_horizontal_material" />
</RelativeLayout>