<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lshankarrao.travelatease1">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <receiver android:name=".AlarmReceiver"></receiver>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActionBarActivity"></activity>
        <activity android:name=".AddEditEventActivity"></activity>
        <activity android:name=".AddEditTripActivity"></activity>
        <activity android:name=".HotelReservationActivity"></activity>
        <activity android:name=".TransportReservationActivity"></activity>
        <activity android:name=".OtherReservationActivity"></activity>
        <activity android:name=".TripListActivity"></activity>
        <activity android:name=".ViewTripItineraryActivity"></activity>
        <activity android:name=".SetTripPlanningReminderActivity"></activity>
        <activity android:name=".LocationNotificationActionActivity"></activity>
        <activity android:name=".LocationBasedNotifierActivity"></activity>
        <activity android:name=".LocationBasedNotificationPic"></activity>
        <service android:name=".LocationBasedNotificationHandler"
            android:enabled="true"
            android:exported="true">
        </service>

    </application>

</manifest>
